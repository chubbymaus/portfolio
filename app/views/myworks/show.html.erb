<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), id: 'main-image' %>
      <p><%= link_to '<i class="fa fa-arrow-left" aria-hidden="true"></i> Back to all portfolio items'.html_safe, myworks_path %></p>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <hr>
      <em><%= @portfolio_item.subtitle %></em>
      <p><%= @portfolio_item.body %></p>
      <hr>
      <h3>Technologies Used:</h3>
      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to 'Edit Item', edit_mywork_path(@portfolio_item), class: 'btn btn-success btn-block' %>
        </div>  
        <div>
          <%= link_to 'Delete Item', @portfolio_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %>
        </div> 
      <% end %>
    </div>  
  </div>  
</div>