<h1>Portfolio items</h1>

<%= link_to "Create New Item", new_mywork_path %>

<% @portfolio_item.each do |portfolio_item| %>
  <h2><%= link_to portfolio_item.title, mywork_path(portfolio_item.id) %></h2>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
  <%= link_to "Edit", edit_mywork_path(portfolio_item.id) %>
  <%= link_to 'Destroy Portfolio Item', mywork_path(portfolio_item.id), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>